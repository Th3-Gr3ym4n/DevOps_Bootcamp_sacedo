pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Th3-Gr3ym4n/DevOps_Bootcamp_sacedo.git'
            }
        }

        stage('Build') {
            steps {
                dir("$WORKSPACE/exercises/jenkins-resources/calculator")
                sh '''
                gradlew compileJava
                              
                '''
            }
        }

        stage('Tests') {
            steps {
                dir("$WORKSPACE/exercises/jenkins-resources/calculator")
                sh '''
                gradlew test
                '''
            }
        }
    }
}

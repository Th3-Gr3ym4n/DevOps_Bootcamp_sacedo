pipeline {
    agent any

    stages {
        stage('Verify') {
            steps {
               sh 'java -version'

            }
        }
        
        stage('Build') {
            steps {
                sh '''
                cd modulo4/exercises/jenkins-resources/calculator
                chmod +x gradlew
                ./gradlew compileJava         
                '''
            }
        }

        stage('Tests') {
            steps {
                sh '''
                cd modulo4/exercises/jenkins-resources/calculator
                chmod +x gradlew
                ./gradlew test
                '''
            }
        }
    }
}


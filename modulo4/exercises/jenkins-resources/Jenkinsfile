pipeline {
    agent any

    stages {
        stage('Verify') {
            steps {
                sh ''' 
                ls -lah
                '''
                sh 'printenv | sort'

            }
        }
        stage('Build') {
            steps {
                sh '''
                cd modulo4/exercises/jenkins-resources/calculator
                gradlew compileJava
                              
                '''
            }
        }

        stage('Tests') {
            steps {
                sh '''
                cd modulo4/exercises/jenkins-resources/calculator
                gradlew test
                '''
            }
        }
    }
}


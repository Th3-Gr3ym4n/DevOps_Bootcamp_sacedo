pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/Th3-Gr3ym4n/DevOps_Bootcamp_sacedo.git'
            }
        }

        stage('Compile') {
            steps {
                sh './modulo4/exercises/jenkins-resources/calculator/gradlew compileJava'
            }
        }

        stage('Unit Tests') {
            steps {
                sh './modulo4/exercises/jenkins-resources/calculator/gradlew test'
            }
        }
    }
}
